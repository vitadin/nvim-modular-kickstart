{
  "runtime.version": "LuaJIT",
  "runtime.path": [
    "lua/?.lua",
    "lua/?/init.lua"
  ],
  "diagnostics.globals": [
    "vim"
  ],
  "workspace.library": [
    "$VIMRUNTIME/lua",
    "${3rd}/luv/library"
  ],
  "workspace.checkThirdParty": false,
  "completion.callSnippet": "Replace",
  "format.enable": true,
  "format.defaultConfig": {
    "indent_style": "tab",
    "tab_width": "4",
    "quote_style": "single",
    "call_arg_parentheses": "keep",
    "continuation_indent": "4"
  }
}
